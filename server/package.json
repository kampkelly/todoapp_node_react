  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev src/app.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migrate": "yarn run typeorm migration:run",
    "migrate:revert": "yarn run typeorm migration:revert",
    "test": "cross-env TS_NODE_FILES=true TODO_ENV=test nyc --reporter=lcov --reporter=text-summary mocha -r ts-node/register --files src __tests__/**/*.ts --timeout 40000 --exit"
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "faker": "^5.4.0",
    "pg": "^8.6.0",
    "typeorm": "^0.2.32",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/mocha": "^8.2.2",
    "@types/supertest": "^2.0.11",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript-prettier": "^4.1.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "supertest": "^6.0.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.1.3"
  }
}
